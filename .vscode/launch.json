    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "run yasa",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run_yasa.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "perform analysis",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/perform_analysis.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "visualization",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/visualizer.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--icdata",
                "--suppress-empty-channels"
            ]
        },
        {
            "name": "training",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": ["--model", "cdil_gru", "--data", "hdf5_data", "--avg_window_size", "15", "--epochs", "10", "--lr", "0.1", "--batch_size", "32", "--filter_bandwidth", "False"]
        },
        {
            "name": "export dataset",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/export_hdf5_dataset.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": ["--data_dir", "data", "--output_dir", "hdf5_data", "--duration", "30"]
        },
        {
            "name": "h5 visualizer",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test_h5py_visualizer.py",
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            "name": "annotate",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/annotate.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--data_path", "hdf5_data",
                "--checkpoint_path", "checkpoints/spindle-detector-epoch=18-val_AUC_avg=0.92.ckpt",
                "--filter_bandwidth", "True",
                "--model", "cdil",
                "--avg_window_size", "3",
            ]
        }
    ]
}